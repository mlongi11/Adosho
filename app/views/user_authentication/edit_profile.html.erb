<div >
  <h3>
    Edit User Account
  </h3>

  <form action="/modify_user" method="post">
    <div class="form-row">
      <div class= "form-group col-md-12">
      <label for="email_box">Email</label>
      <input type="email" class="form-control" id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="password_box">Password</label>
        <input type="password" class="form-control" id="password_box" name="query_password" placeholder="Enter your password...">
      </div>
      <div class="form-group col-md-6">
        <label for="password_confirmation_box">Password Confirmation</label>
        <input type="password" class="form-control" id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password...">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="first_name_box">First name</label>
        <input type="text" class="form-control" id="first_name_box" name="query_first_name" value="<%= @current_user.first_name %>">
      </div>
      <div class="form-group col-md-6">
        <label for="last_name_box">Last name</label>
        <input type="text" class="form-control" id="last_name_box" name="query_last_name" value="<%= @current_user.last_name %>">
      </div>
    </div>
    <div class="form-row">
      <div class= "form-group col-md-12">
      <label for="phone_number_box">Phone number</label>
      <input type="text" class="form-control" id="phone_number_box" name="query_phone_number" value="<%= @current_user.phone_number %>">
      </div>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Update Profile</button>
  </form>
  <hr>
