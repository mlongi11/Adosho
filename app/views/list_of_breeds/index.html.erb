<div>
  <div>
    <h1>
      List of all list of breeds
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new list of breed
    </h2>

    <form action="/insert_list_of_breed" method="post">
      <div>
        <label for="species_box">
          Species
        </label>

        <input type="text" id="species_box" name="query_species">
      </div>

      <button>
        Create list of breed
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Species
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_list_of_breeds.each do |a_list_of_breed| %>
      <tr>
        <td>
          <%= a_list_of_breed.id %>
        </td>

        <td>
          <%= a_list_of_breed.species %>
        </td>

        <td>
          <%= time_ago_in_words(a_list_of_breed.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_list_of_breed.updated_at) %> ago
        </td>

        <td>
          <a href="/list_of_breeds/<%= a_list_of_breed.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
