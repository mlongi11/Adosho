<div>
  <div>
    <h1>
      List of all breed preferences
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new breed preference
    </h2>

    <form action="/insert_breed_preference" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="breed_id_box">
          Breed
        </label>

        <input type="text" id="breed_id_box" name="query_breed_id">
      </div>

      <button>
        Create breed preference
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Breed
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_breed_preferences.each do |a_breed_preference| %>
      <tr>
        <td>
          <%= a_breed_preference.id %>
        </td>

        <td>
          <%= a_breed_preference.user_id %>
        </td>

        <td>
          <%= a_breed_preference.breed_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_breed_preference.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_breed_preference.updated_at) %> ago
        </td>

        <td>
          <a href="/breed_preferences/<%= a_breed_preference.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
