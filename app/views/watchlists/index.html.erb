<div>
  <div>
    <h3>
      My Watchlist
    </h3>
  </div>
</div>

<div class="row row-cols-1 row-cols-md-4">
  <% @current_users_watchlist.each do |watched_pet| %>
  <div class="col mb-3">
    <div class="card h-100">
      <img src="<%=watched_pet.pet.picture%>" class="card-img-top" alt="<%=watched_pet.pet.picture%>">
      <div class="card-body">
        <h5 class="card-title"><%=watched_pet.pet.name%></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%=watched_pet.pet.species%>, <%="#{time_ago_in_words(watched_pet.pet.estimated_birthday)} old"%></h6>
        <h6 class="card-subtitle mb-2 text-muted"><%=watched_pet.pet.gender%>, <%=watched_pet.pet.weight%></h6>
        <span class="badge badge-light"><%=watched_pet.pet.status%></span>
        <%# <p class="card-text">TEXT</p> %>
        <div>
          <a href="/pets/<%=watched_pet.pet.id%>" class="btn btn-outline-primary btn-sm">Details</a>
          <%if Watchlist.where({ :pet_id => watched_pet.pet.id, :user_id => @current_user.id }).at(0) == nil%>
            <a href="/insert_watchlist/<%=watched_pet.pet.id%>" class="btn btn-outline-success btn-sm">Add to Watchlist</a>
          <%else%>
            <a href="/delete_watchlist/<%=watched_pet.pet.id%>" class="btn btn-outline-danger btn-sm">Stop Watching</a>
          <%end%>
        </div>
        <span class="badge badge-pill badge-info">Children <span class="badge badge-light"><%=watched_pet.pet.children_competability_ranking%></span></span>
        <span class="badge badge-pill badge-info">Dog <span class="badge badge-light"><%=watched_pet.pet.dog_competability_ranking%></span></span>
        <span class="badge badge-pill badge-info">Cat <span class="badge badge-light"><%=watched_pet.pet.cat_competability_ranking%></span></span>
        <span class="badge badge-pill badge-info">Home Alone <span class="badge badge-light"><%=watched_pet.pet.home_alone_competability_ranking%></span></span>
        <span class="badge badge-pill badge-info">Activity <span class="badge badge-light"><%=watched_pet.pet.activity_competability_ranking%></span></span>
      </div>
    </div>
  </div>
  <% end %>
</div>
<hr>
