<div>
  <div>

    <div>
      <div>
        <a href="/pets">
          Go back
        </a>
      </div>

      <%if @current_user.account_type == "Administrator"%>
        <div>
          <a href="/delete_pet/<%= @the_pet.id %>">
            Delete pet
          </a>
        </div>
      <%end%>
    </div>

    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-4">
        <img src="<%=@the_pet.picture%>" class="card-img-top" alt="<%=@the_pet.picture%>">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">About <%=@the_pet.name%></h5>
              <div class="row">
                <div class="col-3 col-sm-3">
                  <h6><i class="fas fa-paw"></i> Species</h6>
                </div>
                <div class="col-3 col-sm-3">
                  <h6><i class="fas fa-venus-mars"></i> Gender</h6>
                </div>
                <div class="col-3 col-sm-3">
                  <h6><i class="fas fa-birthday-cake"></i> Estimated Age</h6>
                </div>
                <div class="col-3 col-sm-3">
                  <h6><i class="fas fa-weight-hanging"></i> Weight</h6>
                </div>
            </div>
            <div class ="row">
              <div class="col-3 col-sm-3">
                <%=@the_pet.species%>
              </div>
              <div class="col-3 col-sm-3">
                <%=@the_pet.gender%>
              </div>
              <div class="col-3 col-sm-3">
                <%=time_ago_in_words(@the_pet.estimated_birthday)%>
              </div>
              <div class="col-3 col-sm-3">
                <%=@the_pet.weight%>
              </div>
            </div>

            <hr>

            <div class="row">
              <h6>Competability Rankings<h6>
            </div>

            <div class="row">
              <div class="col-2 col-sm-2 text-center">
                <h6><i class="fas fa-child"></i></i></i> Children</h6>
              </div>
              <div class="col-2 col-sm-2 text-center">
                <h6><i class="fas fa-dog"></i> Dogs</h6>
              </div>
              <div class="col-2 col-sm-2 text-center">
                <h6><i class="fas fa-cat"></i> Cats</h6>
              </div>
              <div class="col-2 col-sm-2 text-center">
                <h6><i class="fas fa-home"></i> Home Alone</h6>
              </div>
              <div class="col-2 col-sm-2 text-center">
                <h6><i class="fas fa-dumbbell"></i> Activity</h6>
              </div>
            </div>

            <div class="row">
              <div class="col-2 col-sm-2 text-center">
                <%=@the_pet.children_competability_ranking%>
              </div>
              <div class="col-2 col-sm-2 text-center">
                <%=@the_pet.dog_competability_ranking%>
              </div>
              <div class="col-2 col-sm-2 text-center">
                <%=@the_pet.cat_competability_ranking%>
              </div>
              <div class="col-2 col-sm-2 text-center">
                <%=@the_pet.home_alone_competability_ranking%>
              </div>
              <div class="col-2 col-sm-2 text-center">
                <%=@the_pet.activity_competability_ranking%>
              </div>
            </div>


            <%if Watchlist.where({ :pet_id => @the_pet.id, :user_id => @current_user.id }).at(0) == nil%>
              <a href="/insert_watchlist/<%=@the_pet.id%>" class="btn btn-outline-success btn-sm">Add to Watchlist</a>
            <%else%>
              <a href="/delete_watchlist/<%=@the_pet.id%>" class="btn btn-outline-danger btn-sm">Stop Watching</a>
            <%end%>
            <p class="card-text"><small class="text-muted">Updated <%= time_ago_in_words(@the_pet.updated_at) %> ago</small></p>
          </div>
        </div>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_pet.name %>
      </dd>

      <dt>
        Estimated birthday
      </dt>
      <dd>
        <%= @the_pet.estimated_birthday %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_pet.status %>
      </dd>

      <dt>
        Adopter
      </dt>
      <dd>
        <%= @the_pet.adopter_id %>
      </dd>

      <dt>
        Gender
      </dt>
      <dd>
        <%= @the_pet.gender %>
      </dd>

      <dt>
        Weight
      </dt>
      <dd>
        <%= @the_pet.weight %>
      </dd>

      <dt>
        Children competability ranking
      </dt>
      <dd>
        <%= @the_pet.children_competability_ranking %>
      </dd>

      <dt>
        Dog competability ranking
      </dt>
      <dd>
        <%= @the_pet.dog_competability_ranking %>
      </dd>

      <dt>
        Cat competability ranking
      </dt>
      <dd>
        <%= @the_pet.cat_competability_ranking %>
      </dd>

      <dt>
        Home alone competability ranking
      </dt>
      <dd>
        <%= @the_pet.home_alone_competability_ranking %>
      </dd>

      <dt>
        Activity competability ranking
      </dt>
      <dd>
        <%= @the_pet.activity_competability_ranking %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_pet.notes %>
      </dd>

      <dt>
        Foster
      </dt>
      <dd>
        <%= @the_pet.foster_id %>
      </dd>

      <dt>
        Species
      </dt>
      <dd>
        <%= @the_pet.species %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_pet.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_pet.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit pet
    </h2>

    <form action="/modify_pet/<%= @the_pet.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_pet.name %>">
      </div>

      <div>
        <label for="estimated_birthday_box">
          Estimated birthday
        </label>

        <input type="date" id="estimated_birthday_box" name="query_estimated_birthday" value="<%= @the_pet.estimated_birthday %>">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_pet.status %>">
      </div>

      <div>
        <label for="adopter_id_box">
          Adopter
        </label>

        <input type="text" id="adopter_id_box" name="query_adopter_id" value="<%= @the_pet.adopter_id %>">
      </div>

      <div>
        <label for="gender_box">
          Gender
        </label>

        <input type="text" id="gender_box" name="query_gender" value="<%= @the_pet.gender %>">
      </div>

      <div>
        <label for="weight_box">
          Weight
        </label>

        <input type="text" id="weight_box" name="query_weight" value="<%= @the_pet.weight %>">
      </div>

      <div>
        <label for="children_competability_ranking_box">
          Children competability ranking
        </label>

        <input type="text" id="children_competability_ranking_box" name="query_children_competability_ranking" value="<%= @the_pet.children_competability_ranking %>">
      </div>

      <div>
        <label for="dog_competability_ranking_box">
          Dog competability ranking
        </label>

        <input type="text" id="dog_competability_ranking_box" name="query_dog_competability_ranking" value="<%= @the_pet.dog_competability_ranking %>">
      </div>

      <div>
        <label for="cat_competability_ranking_box">
          Cat competability ranking
        </label>

        <input type="text" id="cat_competability_ranking_box" name="query_cat_competability_ranking" value="<%= @the_pet.cat_competability_ranking %>">
      </div>

      <div>
        <label for="home_alone_competability_ranking_box">
          Home alone competability ranking
        </label>

        <input type="text" id="home_alone_competability_ranking_box" name="query_home_alone_competability_ranking" value="<%= @the_pet.home_alone_competability_ranking %>">
      </div>

      <div>
        <label for="activity_competability_ranking_box">
          Activity competability ranking
        </label>

        <input type="text" id="activity_competability_ranking_box" name="query_activity_competability_ranking" value="<%= @the_pet.activity_competability_ranking %>">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes"><%= @the_pet.notes %></textarea>
      </div>

      <div>
        <label for="foster_id_box">
          Foster
        </label>

        <input type="text" id="foster_id_box" name="query_foster_id" value="<%= @the_pet.foster_id %>">
      </div>

      <div>
        <label for="species_box">
          Species
        </label>

        <input type="text" id="species_box" name="query_species" value="<%= @the_pet.species %>">
      </div>

      <button>
        Update pet
      </button>
    </form>
  </div>
</div>
<hr>
